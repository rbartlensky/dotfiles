URxvt.termName:         rxvt-256color
URxvt.font:             xft:terminus-13
URxvt.italicFont:       xft:terminus-13
URxvt.letterSpace:      -1
URxvt.loginShell:       true
URxvt.geometry:         80x50
URxvt.cutchars:         "`\"'&()*,:;<=>?[\\]^{|}$"
URxvt.saveLines:        10000

!light theme
URxvt.background:       #000000
URxvt.foreground:       #ffffff
!light colors
URxvt.color0:           #000000
URxvt.color1:           #CD0000
URxvt.color2:           #00CD00
URxvt.color3:           #CDCD00
URxvt.color4:           #0000CD
URxvt.color5:           #CD00CD
URxvt.color6:           #00CDCD
URxvt.color7:           #FAEBD7
!dark colors
URxvt.color8:           #709080
URxvt.color9:           #cc5454
URxvt.color10:          #4d9f4d
URxvt.color11:          #f0dfaf
URxvt.color12:          #4186be
URxvt.color13:          #ec93d3
URxvt.color14:          #93e0e3
URxvt.color15:          #000000

!! Keycode fixes for Ctrl+direction in Vim
!URxvt.keysym.C-Up:     \033[1;5A
!URxvt.keysym.C-Down:   \033[1;5B
!URxvt.keysym.C-Right:  \033[1;5C
!URxvt.keysym.C-Left:   \033[1;5D
!URxvt.keysym.C-Prior:  \033[5;5~
!URxvt.keysym.C-Next:   \033[6;5~
!URxvt.keysym.C-Home:   \033[7;5~
!URxvt.keysym.C-End:    \033[8;5~

! Disable ISO 14755 unicode input so we can use Ctrl-Shift bindings
URxvt.iso14755:        false
URxvt.iso14755_52:     false

! Disable Ctrl-Alt-c & Ctrl-Alt-v bindings (optional)
URxvt.keysym.C-M-c:    builtin-string:
URxvt.keysym.C-M-v:    builtin-string:

! Bind Ctrl-Shift-c & Ctrl-Shift-v to copy and paste
! I dont know why, but I needed to use hex keysym values to get it to work
URxvt.keysym.M-w: eval:selection_to_clipboard
URxvt.keysym.C-y: eval:paste_clipboard

URxvt.scrollBar: false
URxvt.visualBell: true

! Perl extensions
URxvt.perl-ext-common:      default,matcher
URxvt.matcher.button:       1
URxvt.urlLauncher: firefox
